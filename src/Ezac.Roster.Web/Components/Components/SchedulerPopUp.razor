@using Ezac.Roster.Domain.Entities
@using Ezac.Roster.Domain.Interfaces.Services
@using Ezac.Roster.Domain.Models

@inject IUserService _userService
@inject IPermissionsService _permissionService

<div class="container">
    <div class="row">
        <div class="col col-lg-12">
            <h6>Beschikbare/bevoegde leden</h6>
            <button @onclick="e => OnCancel.InvokeAsync()">Cancel</button>
            <div class="mb-3">
                <select class="form-select" @onchange="e => OnGetStaff.InvokeAsync(e)">
                    <option value="">Selecteer een baan</option>
                    @foreach (var permission in _permissions)
                    {
                        <option>@permission.Name</option>
                    }
                </select>
            </div>

            <div>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Staff)
                        {
                            <tr class="userrow">
                                @*<td id="@user.Id" draggable="true" ondragover="event.preventDefault();" @ondragstart="(e => HandleDragStart(e, user))">@user.Name (@user.Scaling)</td>*@
                                <td id="@user.Id" draggable="true" ondragover="event.preventDefault();" @ondragstart="(e => OnDragged.InvokeAsync(user))">@user.Name (@user.Scaling)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="mb-2">
                <button class="btn btn-primary">Dagdeel toevoegen</button>
            </div>
            <div>
                <button class="btn btn-primary">Dienst toevoegen</button>
            </div>
        </div>
    </div>
</div>



